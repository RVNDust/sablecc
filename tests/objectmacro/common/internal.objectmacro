Macro a
    Param
        y : b("zzzz", "lala"), separator="\n", none="ya pas de y";
        lala : b("toto", "titi"), c("haha", y), before_first="===== lala ======";
        lolo : b("toto {Insert: c("yyyy", y)} {Insert: c("yyyy", y)} {lala}", "titi"),
                c("cccc", y), after_last="==== lolo ====";

{Begin}
{lala}
{Insert: b("lala", "lolo")}
{lolo}
{y}
{End}

Macro b
    Internal
        x : String;
        y : String;
{Begin}
{x}
{y}
{End}

Macro c
    Internal
        z : String;
        a : b("tata", "tutu"), separator="\n ====== separator ========= \n";
{Begin}
{z}
{a}
{End}

p$(name)$no_eol$
$end: param_arg $

$comment: ========== macro_verifier ========= $

$macro: macro_verifier(name) $
    private void verifyM$name($expand: macro_param$){

        for(Macro macro : $expand: param_arg$){
            if($expand: macro_verify_type, separator=" && "$){
                //TODO throw new CodeGenerationException
                throw new InternalException("bad type exception");
            }
        }
    }
$end: macro_verifier $

$comment: ========== macro_verify_type ========= $


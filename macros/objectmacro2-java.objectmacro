$comment: ========== macro ========== $

$macro: macro(name) $
$insert: header $
$expand: package_declaration, before_first="\n" $
$expand: imports, before_first="\n" $

public class M$name extends Macro{
$expand: param_macro_field, param_string_field, separator="\n", before_first="\n" $
$expand: constructor, before_first="\n" $
$expand: parameter_setter, before_first="\n" $
$expand: param_string_ref, param_macro_ref, separator="\n", before_first="\n" $
$expand: macro_verifier, separator="\n", before_first="\n" $

    @Override
    public String getExpansion(){

        StringBuilder sb = new StringBuilder();

$expand: string_part, param_insert_part, eol_part, macro_insert_part $
        return sb.toString();
    }
}
$end: macro $


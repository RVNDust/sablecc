$comment: ========== macro_insert_part =============== $

$macro: macro_insert_part(name) $
        M$name newM$name = new M$name();
        sb.append(newM$name.getExpansion());
$end: macro_insert_part $

$comment: ========== param_macro_ref ================== $

$macro: param_macro_ref(name) $
    private String r$name(){
        StringBuilder sb = new StringBuilder();

        for(Macro macro : this.p$name){
            sb.append(macro.getExpansion());
        }

        return sb.toString();
    }
$end: param_macro_ref $

$comment: =========== param_string_ref ============= $

$macro: param_string_ref(name) $
    private String r$name(){
